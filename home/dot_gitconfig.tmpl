[user]
	name = {{ onepasswordRead "op://Personal/Identity/username" }}
	email = {{ onepasswordRead "op://Personal/Identity/email" }}
	signingkey = key::{{ onepasswordRead "op://Personal/SSH Key/public key" }} SSH Key
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	format = ssh
{{- if eq .chezmoi.os "darwin" }}
	program = /usr/local/bin/gpg
{{- end }}
[gpg "ssh"]
	allowedsignersfile = ~/.config/git/allowed_signers
{{- if eq .chezmoi.os "darwin" }}
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
{{- end }}
{{- if eq .chezmoi.os "windows" }}
	program = "C:/Program Files/1Password/app/8/op-ssh-sign.exe"
{{- end }}
[commit]
	gpgsign = true
{{- if eq .chezmoi.os "darwin" }}
[diff]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
	trustExitCode = true
[merge]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true
[mergetool]
	prompt = false
{{- end }}
[core]
	excludesfile = {{.chezmoi.homeDir}}/.gitignore_global
{{ if eq .chezmoi.os "linux" }}
{{   if (.chezmoi.kernel.osrelease | lower | contains "microsoft") }}
    sshCommand = ssh.exe
{{   end }}
{{ end }}
{{ if eq .chezmoi.os "windows" }}
    sshCommand = C:/Windows/System32/OpenSSH/ssh.exe
{{ end }}