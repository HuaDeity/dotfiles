// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_install_extensions": {
    "biome": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "dockerfile": true,
    "git-firefly": true,
    "html": false,
    "lua": true,
    "ruff": true,
    "toml": true,
    "wakatime": true
  },
  "assistant": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "version": "2"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "buffer_font_fallbacks": ["Monaspace Neon"],
  "buffer_font_family": "Monaspace Neon Var",
  "buffer_font_features": {
    "calt": true,
    "liga": true,
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "cv01": 2
  },
  "buffer_font_size": 13,
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_assistant": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "file_types": {
    "TOML": ["tmpl"]
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true
    }
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "languages": {
    "JSON": {
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.biome": true,
            "source.organizeImports.biome": true
          }
        },
        {
          "language_server": {
            "name": "biome"
          }
        }
      ]
    },
    "Lua": {
      "formatter": {
        "external": {
          "command": "stylua",
          "arguments": [
            "--syntax=Lua54",
            "--respect-ignores",
            "--stdin-filepath",
            "{buffer_path}",
            "-"
          ]
        }
      }
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    // "biome": {
    //   "settings": {
    //     "require_config_file": true
    //   }
    // },
    "rust-analyzer": {
      "check": {
        "command": "clippy"
      }
    }
  },
  "ssh_connections": [
    {
      "host": "10357",
      "projects": [
        {
          "paths": [
            "~/.config/nvim"
          ]
        },
        {
          "paths": [
            "~/FTFDrag"
          ]
        }
      ]
    },
    {
      "host": "10358",
      "projects": [
        {
          "paths": [
            "~/projects/FTFDrag"
          ]
        }
      ]
    }
  ],
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "terminal": {
    "alternate_scroll": "on"
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "ui_font_size": 16,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "vim_mode": true
}
