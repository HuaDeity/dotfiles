{{- if ne .chezmoi.os "windows" }}
[".oh-my-zsh"]
    type = "archive"
    url = "https://github.com/ohmyzsh/ohmyzsh/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/plugins/fast-syntax-highlighting"]
    type = "archive"
    url = "https://github.com/zdharma-continuum/fast-syntax-highlighting/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/plugins/zsh-autosuggestions"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-autosuggestions/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/plugins/zsh-completions"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-completions/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/themes/powerlevel10k"]
    type = "archive"
    url = "https://github.com/romkatv/powerlevel10k/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".config/fsh"]
    type = "archive"
    url = "https://github.com/catppuccin/zsh-fsh/archive/master.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.ini"]
{{- if lookPath "bat" }}
[".config/bat/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/bat/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
    include = ["*/*.tmTheme"]
{{- end }}
{{- if lookPath "lazygit" }}
[".config/lazygit/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/lazygit/archive/master.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.yml"]
{{- end }}
{{- if lookPath "conda" }}
[".oh-my-zsh/custom/plugins/conda-zsh-completion"]
    type = "archive"
    url = "https://github.com/conda-incubator/conda-zsh-completion/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
{{- end }}
{{- end }}

{{- if ne .chezmoi.os "linux" }}
{{- if eq .chezmoi.os "darwin" }}
[".local/bin/im-select"]
    url = "https://raw.githubusercontent.com/daipeihust/im-select/master/macOS/out/apple/im-select"
{{ else }}
[".local/bin/im-select-mspy.exe"]
    url = "https://raw.githubusercontent.com/daipeihust/im-select/master/win-mspy/out/x64/im-select-mspy.exe"
{{- end }}
    type = "file"
    refreshPeriod = "168h"
{{- end }}

{{- if eq .chezmoi.os "darwin" }}
[".oh-my-zsh/custom/plugins/zsh-osx-autoproxy"]
    type = "archive"
    url = "https://github.com/HuaDeity/zsh-osx-autoproxy/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
["Library/Developer/Xcode/UserData/FontAndColorThemes"]
    type = "archive"
    url = "https://github.com/catppuccin/xcode/archive/master.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.xccolortheme"]
["Library/Services/Open Current File in Marked.workflow"]
    type = "archive"
    url = "https://github.com/kotfu/marked-bonus-pack/archive/master.tar.gz"
    exact = true
    stripComponents = 3
    refreshPeriod = "168h"
    include = ["*/*/Open Current File in Marked.workflow/**"]
["Library/Services/Preview Selection in Marked.workflow"]
    type = "archive"
    url = "https://github.com/kotfu/marked-bonus-pack/archive/master.tar.gz"
    exact = true
    stripComponents = 3
    refreshPeriod = "168h"
    include = ["*/*/Preview Selection in Marked.workflow/**"]
["Library/Application Support/BBEdit/Scripts/Open in Marked.applescript"]
    type = "file"
    url = "https://raw.githubusercontent.com/kotfu/marked-bonus-pack/main/BBEdit/Open%20in%20Marked.applescript"
    refreshPeriod = "168h"
[".config/spicetify/CustomApps/marketplace"]
    type = "archive"
    url = "https://github.com/spicetify/spicetify-marketplace/releases/latest/download/spicetify-marketplace.zip"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".config/spicetify/Themes/marketplace/color.ini"]
    type = "file"
    url = "https://raw.githubusercontent.com/spicetify/spicetify-marketplace/main/resources/color.ini"
    refreshPeriod = "168h"
{{- end }}