{{- if ne .chezmoi.os "windows" }}
[".oh-my-zsh"]
    type = "archive"
    url = "https://github.com/ohmyzsh/ohmyzsh/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/plugins/zsh-syntax-highlighting"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-syntax-highlighting/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/plugins/zsh-autosuggestions"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-autosuggestions/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/plugins/zsh-completions"]
    type = "archive"
    url = "https://github.com/zsh-users/zsh-completions/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".oh-my-zsh/custom/themes/powerlevel10k"]
    type = "archive"
    url = "https://github.com/romkatv/powerlevel10k/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".config/zsh-syntax-highlighting/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/zsh-syntax-highlighting/archive/master.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.zsh"]
{{- if lookPath "bat" }}
[".config/bat/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/bat/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
    include = ["*/*.tmTheme"]
{{- end }}
{{- if lookPath "lazygit" }}
[".config/lazygit/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/lazygit/archive/master.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.yml"]
{{- end }}
{{- if lookPath "conda" }}
[".oh-my-zsh/custom/plugins/conda-zsh-completion"]
    type = "archive"
    url = "https://github.com/conda-incubator/conda-zsh-completion/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
{{- end }}
{{- end }}

{{- if ne .chezmoi.os "linux" }}
[".local/bin/im-select"]
    type = "file"
{{- if eq .chezmoi.os "darwin" }}
    url = "https://raw.githubusercontent.com/daipeihust/im-select/master/macOS/out/apple/im-select"
{{ else }}
    url = "https://raw.githubusercontent.com/daipeihust/im-select/master/win/out/x64/im-select.exe"
{{- end }}
    refreshPeriod = "168h"
{{- end }}

{{- if eq .chezmoi.os "darwin" }}
[".oh-my-zsh/custom/plugins/zsh-osx-autoproxy"]
    type = "archive"
    url = "https://github.com/HuaDeity/zsh-osx-autoproxy/archive/master.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".warp/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/warp/archive/master.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.yml"]
["Library/Developer/Xcode/UserData/FontAndColorThemes"]
    type = "archive"
    url = "https://github.com/catppuccin/xcode/archive/master.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.xccolortheme"]
[".config/spicetify/CustomApps/marketplace"]
    type = "archive"
    url = "https://github.com/spicetify/spicetify-marketplace/releases/latest/download/spicetify-marketplace.zip"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
[".config/spicetify/Themes/marketplace/color.ini"]
    type = "file"
    url = "https://raw.githubusercontent.com/spicetify/spicetify-marketplace/main/resources/color.ini"
    refreshPeriod = "168h"
{{- end }}