# vim: set ft=toml:

{{- if ne .chezmoi.os "windows" }}
{{- if lookPath "atuin" }}
[".config/atuin/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/atuin/archive/main.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/themes/**"]
{{- end }}
{{- if lookPath "bat" }}
[".config/bat/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/bat/archive/main.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.tmTheme"]
{{- end }}
{{- if lookPath "delta" }}
[".config/delta/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/delta/archive/main.tar.gz"
    exact = true
    stripComponents = 1
    refreshPeriod = "168h"
    include = ["*/*.gitconfig"]
{{- end }}
{{- if lookPath "fzf" }}
[".config/fzf/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/fzf/archive/main.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.sh", "*/*/*.fish"]
{{- end }}
{{- if lookPath "gitui" }}
[".config/gitui"]
    type = "archive"
    url = "https://github.com/catppuccin/gitui/archive/main.tar.gz"
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.ron"]
{{- end }}
{{- if lookPath "lazygit" }}
[".config/lazygit/themes"]
    type = "archive"
    url = "https://github.com/catppuccin/lazygit/archive/main.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/themes-mergable/**"]
{{- end }}
{{- if eq .chezmoi.os "darwin" }}
["Library/Developer/Xcode/UserData/FontAndColorThemes"]
    type = "archive"
    url = "https://github.com/catppuccin/xcode/archive/main.tar.gz"
    exact = true
    stripComponents = 2
    refreshPeriod = "168h"
    include = ["*/*/*.xccolortheme"]
{{- end }}
{{- end }}

